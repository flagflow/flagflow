{
	"name": "flagflow",
	"version": "1.0.0",
	"type": "module",
	"engines": {
		"node": ">=22"
	},
	"scripts": {
		"dev": "vite dev | ./node_modules/.bin/pino-pretty -i time,host,pid,traceId,sessionId,userId -S",
		"dev-rawlog": "vite dev",
		"build": "vite build",
		"preview": "vite preview | ./node_modules/.bin/pino-pretty -i time,host,pid -S",
		"preview-raw": "vite preview",
		"sync": "svelte-kit sync",
		"ts:check": "node --run sync && svelte-check --tsconfig ./tsconfig.json",
		"format:check": "prettier --check .",
		"format:fix": "prettier --write . | grep -v 'unchanged' | sed G",
		"lint:check": "eslint .",
		"lint:fix": "eslint --fix .",
		"all": "node --run format:fix && node --run lint:fix && node --run format:fix && node --run ts:check && node --run build",
		"npm:reinstall": "rm -rf ./node_modules && rm -f ./package-lock.json && npm i && npm i",
		"docker:build": "docker build --force-rm -t erp:$npm_package_version .",
		"docker:run": "docker run --rm --env-file .env --name erp --network=host erp:$npm_package_version",
		"docker:run:migrate": "docker run --rm --env-file .env --name erp --network=host erp:$npm_package_version node --run db:migrate",
		"docker:it": "docker run -it --rm --env-file .env --name erp erp:$npm_package_version /bin/bash",
		"docker:testdb:clone": "docker exec -it postgres psql -U postgres -d erp -c \"CREATE DATABASE erp_test WITH TEMPLATE erp\"",
		"docker:testdb:drop": "docker exec -it postgres psql -U postgres -d erp -c \"DROP DATABASE IF EXISTS erp_test\"",
		"test": "vitest run",
		"test:ui": "vitest --ui",
		"test:bench": "vitest bench"
	},
	"devDependencies": {
		"@iconify/svelte": "^5.0.0",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.22.2",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@tailwindcss/postcss": "^4.1.11",
		"@tailwindcss/typography": "^0.5.16",
		"@testing-library/svelte": "^5.2.8",
		"@trpc/client": "^11.4.3",
		"@trpc/server": "^11.4.3",
		"@types/eslint": "^9.6.1",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^24.0.10",
		"@typescript-eslint/eslint-plugin": "^8.35.1",
		"@typescript-eslint/parser": "^8.35.1",
		"@vitest/eslint-plugin": "^1.3.4",
		"@vitest/ui": "^3.2.4",
		"autoprefixer": "^10.4.21",
		"check-password-strength": "^3.0.0",
		"eslint": "^9.30.1",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-svelte": "^3.10.1",
		"eslint-plugin-unicorn": "^59.0.1",
		"flowbite": "^3.1.2",
		"flowbite-svelte": "^1.8.3",
		"globals": "^16.3.0",
		"mermaid": "^11.7.0",
		"pino-pretty": "^13.0.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.13",
		"svelte": "^5.34.9",
		"svelte-check": "^4.2.2",
		"tailwindcss": "^4.1.11",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.35.1",
		"vite": "^6.3.5",
		"vite-plugin-circular-dependency": "^0.5.0",
		"vite-plugin-devtools-json": "^0.2.1",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@dotenvx/dotenvx": "^1.45.1",
		"@qiwi/deep-proxy": "^3.0.0",
		"awilix": "^12.0.5",
		"axios": "^1.10.0",
		"clsx": "^2.1.1",
		"cookie": "^1.0.2",
		"dayjs": "^1.11.13",
		"env-var": "^7.5.0",
		"etcd3": "^1.1.2",
		"jsonwebtoken": "^9.0.2",
		"jszip": "^3.10.1",
		"jwks-rsa": "^3.2.0",
		"nanoid": "^5.1.5",
		"p-debounce": "^4.0.0",
		"p-props": "^6.0.0",
		"pino": "^9.7.0",
		"prom-client": "^15.1.3",
		"superjson": "^2.2.2",
		"svelte-persisted-store": "^0.12.0",
		"tsx": "^4.20.3",
		"zod": "^3.25.67"
	}
}
